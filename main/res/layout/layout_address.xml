<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="110dp"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:orientation="vertical"
    app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_height="match_parent">
            <RadioGroup
                android:id="@+id/addSelection"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:visibility="visible"
                android:layout_weight="0.2">

                <RadioButton
                    android:id="@+id/selectAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="14dp"
                    android:buttonTint="@color/tadka_green"

                    />

                <RadioButton android:id="@+id/selectAddress1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:button="@drawable/custom_radio_button"/>

            </RadioGroup>
            <LinearLayout android:layout_height="wrap_content"
                android:layout_width="250dp"
                android:layout_marginTop="12dp"
                android:layout_weight="2"
                android:layout_marginLeft="5dp"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/idhnoStreet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Home/House No."
                    android:textColor="#696969"

                    />
                <TextView
                    android:id="@+id/idarea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Street No."
                    android:textColor="#696969"

                    />
                <TextView
                    android:id="@+id/idcity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Home/House No."
                    android:textColor="#696969"

                    />
                <TextView
                    android:id="@+id/idstate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Home/House No."
                    android:textColor="#696969"

                    />
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_mode_edit_black_24dp"
                android:layout_weight="0.2"
                android:layout_marginRight="15dp"
                android:id="@+id/idimgEdit"
                />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="#D1D0CE"/>
    </LinearLayout>


</LinearLayout>
