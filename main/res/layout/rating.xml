<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <include android:id="@+id/app_bar"
        layout="@layout/app_bar" />

    <View
        android:id="@+id/divider_top"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/app_bar"
        android:background="@color/tadka_green" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="2dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:padding="10dp"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:lineSpacingExtra="2dp"
                android:text="We value your feedback. Please rate us \n based on your experience with tadqa !"
                android:textColor="@color/dim_foreground_material_light"
                android:textSize="14dp"
                android:id="@+id/txtRate" />

            <RatingBar
                android:id="@+id/ratingBar1"
                android:progressTint="#FAC539"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:background="#fff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Your FeedBack"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:textColor="@color/dim_foreground_material_light"
                android:layout_marginTop="11dp"
                android:id="@+id/txtfeed" />

            <EditText
                android:layout_width="300dp"
                android:layout_height="120dp"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:id="@+id/comments"
                android:textSize="15dp"
                android:background="@android:drawable/editbox_background_normal"
                android:layout_gravity="center"
                android:gravity="top|left"
                />

            <EditText
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:maxLength="100"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="50dp"
                android:textColor="@color/dim_foreground_material_light"
                android:gravity="center"
                android:textSize="15dp"
                android:id="@+id/contactnumber"
                android:hint="Enter Mobile Number"
                android:background="@android:drawable/editbox_background_normal"
                android:layout_gravity="center"
                android:inputType="phone" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:id="@+id/button1"
                    android:layout_width="180dp"
                    android:layout_height="50dp"
                    android:background="@color/tadka_green"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:text="Send"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"
                    android:layout_marginBottom="20dp"


                    />
            </LinearLayout>

        </LinearLayout>



    </ScrollView>






</LinearLayout>
