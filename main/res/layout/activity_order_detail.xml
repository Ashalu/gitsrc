<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_order_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.tadqa.android.activity.OrderDetailActivity">

    <com.tadqa.android.view.TrackView android:id="@+id/tvTrackOrder"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/lvSharedItem"/>

    <LinearLayout android:id="@+id/lvSharedItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:transitionName="SHARED_ELEMENT">

        <android.support.v7.widget.CardView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="2dp"
            android:layout_margin="5dp">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvOrderIdHeading"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="ORDER ID"
                            android:textColor="@color/tadka_green"
                            android:layout_marginTop="3dp"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/tvOrderId"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="245168454"
                            android:layout_marginTop="3dp"
                            android:textColor="#424242"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvOrderAmountHeading"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:layout_marginTop="3dp"
                            android:text="AMOUNT"
                            android:textColor="@color/tadka_green"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/tvOrderAmount"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_marginTop="3dp"
                            android:gravity="right"
                            android:text="₹ 500"
                            android:textColor="#424242"
                            android:textSize="15sp" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:background="#90848484" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvOrderDateHeading"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="ORDER DATE"
                            android:layout_marginTop="3dp"
                            android:textColor="#848484"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/tvOrderDate"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_marginTop="3dp"
                            android:text="12ᵗʰ November, 2016"
                            android:textColor="#424242"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvOrderDeliveryTimeHeading"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="DELIVERY TIME"
                            android:layout_marginTop="3dp"
                            android:textColor="#848484"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/tvOrderDeliveryTime"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:layout_marginTop="3dp"
                            android:text="12ᵗʰ November, 2016"
                            android:textColor="#424242"
                            android:textSize="15sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvOrderItemCountHeading"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="ITEM(S)"
                            android:textColor="#848484"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/tvOrderItemCount"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_marginTop="3dp"
                            android:text="2 Items"
                            android:textColor="#424242"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvOrderStatusHeading"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="STATUS"
                            android:textColor="#848484"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/tvOrderStatus"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="Pending"
                            android:layout_marginTop="3dp"
                            android:textColor="#424242"
                            android:textSize="15sp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <TextView android:id="@+id/tvOrderedItemsHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTrackOrder"
        android:layout_margin="10dp"
        android:text="Ordered Items"/>

    <ListView android:id="@+id/lvOrderItems"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_below="@id/tvOrderedItemsHeading"
        android:layout_above="@+id/llCancelButtonContainer"/>

    <LinearLayout android:id="@+id/llCancelButtonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <Button android:id="@+id/btnCancelOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"/>
    </LinearLayout>
</RelativeLayout>
